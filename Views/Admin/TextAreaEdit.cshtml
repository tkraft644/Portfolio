@model Portfolio.Models.AdminTextAreaEditViewModel

@{
    ViewData["Title"] ??= "Edycja";
    var title = (string?)ViewData["Title"] ?? "Edycja";
    var hint = (string?)ViewData["Hint"];
    var success = (string?)TempData["Admin.Success"];
}

<div class="page-bg">
    <div class="container py-5 container-max-900">
        <div class="vs-panel">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <h1 class="mb-1">@title</h1>
                    @if (!string.IsNullOrWhiteSpace(hint))
                    {
                        <div class="text-muted">@hint</div>
                    }
                </div>
                <a class="btn btn-outline-dark btn-sm" asp-controller="Admin" asp-action="Index">Powr√≥t</a>
            </div>

            @if (!string.IsNullOrWhiteSpace(success))
            {
                <div class="alert alert-success mt-4 mb-0">@success</div>
            }

            <form method="post" class="mt-4">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <textarea asp-for="Items" class="form-control" rows="14" spellcheck="false"></textarea>
                    <span asp-validation-for="Items" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-secondary">Zapisz</button>
                    <a class="btn btn-outline-dark" asp-controller="Admin" asp-action="Index">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

