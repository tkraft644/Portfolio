@model Portfolio.Models.AdminProfileEditViewModel

@{
    ViewData["Title"] = "Admin - Profil";
    var success = (string?)TempData["Admin.Success"];
}

<div class="page-bg">
    <div class="container py-5 container-max-900">
        <div class="vs-panel">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <h1 class="mb-1">Profil</h1>
                    <div class="text-muted">Edycja głównych danych w bazie.</div>
                </div>
                <a class="btn btn-outline-dark btn-sm" asp-controller="Admin" asp-action="Index">Powrót</a>
            </div>

            @if (!string.IsNullOrWhiteSpace(success))
            {
                <div class="alert alert-success mt-4 mb-0">@success</div>
            }

            <form method="post" class="mt-4">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Imię i nazwisko</label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label">Rola</label>
                        <input asp-for="Role" class="form-control"/>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ExperienceStartDate" class="form-label">Start doświadczenia</label>
                        <input asp-for="ExperienceStartDate" class="form-control" type="date"/>
                        <span asp-validation-for="ExperienceStartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="HeroBackgroundUrl" class="form-label">Hero background URL</label>
                        <input asp-for="HeroBackgroundUrl" class="form-control"/>
                        <span asp-validation-for="HeroBackgroundUrl" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactEmail" class="form-label">E-mail</label>
                        <input asp-for="ContactEmail" class="form-control"/>
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactPhone" class="form-label">Telefon</label>
                        <input asp-for="ContactPhone" class="form-control"/>
                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="AboutBioTemplatePl" class="form-label">Bio (PL) — użyj {0} jako lata doświadczenia</label>
                        <textarea asp-for="AboutBioTemplatePl" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="AboutBioTemplatePl" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="AboutBioTemplateEn" class="form-label">Bio (EN) — use {0} for years of experience</label>
                        <textarea asp-for="AboutBioTemplateEn" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="AboutBioTemplateEn" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-secondary">Zapisz</button>
                    <a class="btn btn-outline-dark" asp-controller="Admin" asp-action="Index">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

