@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-vs border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand vs-title" asp-area="" asp-controller="Home" asp-action="Index">
                Tomasz Kraft Solutions
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link vs-nav-link" asp-controller="Home" asp-action="About">
                            @Localizer["Nav.About"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link vs-nav-link" asp-controller="Home" asp-action="Projects">
                            @Localizer["Nav.Projects"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link vs-nav-link" asp-controller="Home" asp-action="Contact">
                            @Localizer["Nav.Contact"]
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle vs-nav-link" href="#" id="langDropdown"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @Localizer["Nav.Language"]
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Language"
                                   asp-action="Set"
                                   asp-route-culture="pl"
                                   asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                                    🇵🇱 Polski
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Language"
                                   asp-action="Set"
                                   asp-route-culture="en"
                                   asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                                    🇬🇧 English
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main">
    @RenderBody()
</main>

<footer class="border-top footer">
    <div class="footer-content">
        &copy; 2025 - Tomasz Kraft Solutions
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
