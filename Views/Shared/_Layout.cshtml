@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    string NavLinkClass(string controller, string action) =>
        currentController == controller && currentAction == action
            ? "nav-link vs-nav-link active"
            : "nav-link vs-nav-link";

    string? AriaCurrent(string controller, string action) =>
        currentController == controller && currentAction == action ? "page" : null;
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/img/logo-full.png" asp-append-version="true" />
    <link rel="apple-touch-icon" href="~/img/logo-full.png" asp-append-version="true" />
    <script src="~/js/theme.js" asp-append-version="true" defer></script>
</head>
<body>
<a class="visually-hidden-focusable position-absolute top-0 start-0 m-2 p-2 bg-dark text-white rounded"
   href="#main-content">
    @Localizer["Nav.SkipToContent"]
</a>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-vs border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand vs-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="vs-logo vs-logo-full vs-logo-full-light"
                     src="~/img/logo-full.png"
                     alt="Tomasz Kraft Solutions"
                     height="32"
                     asp-append-version="true" />

                <img class="vs-logo vs-logo-full vs-logo-full-dark"
                     src="~/img/logo-full-white.png"
                     alt="Tomasz Kraft Solutions"
                     height="32"
                     asp-append-version="true" />
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="@NavLinkClass("Home", "About")"
                           aria-current="@AriaCurrent("Home", "About")"
                           asp-controller="Home" asp-action="About">
                            @Localizer["Nav.About"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="@NavLinkClass("Home", "Projects")"
                           aria-current="@AriaCurrent("Home", "Projects")"
                           asp-controller="Home" asp-action="Projects">
                            @Localizer["Nav.Projects"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="@NavLinkClass("Home", "Fun")"
                           aria-current="@AriaCurrent("Home", "Fun")"
                           asp-controller="Home" asp-action="Fun">
                            @Localizer["Nav.Fun"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="@NavLinkClass("Home", "Contact")"
                           aria-current="@AriaCurrent("Home", "Contact")"
                           asp-controller="Home" asp-action="Contact">
                            @Localizer["Nav.Contact"]
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item me-2 d-flex align-items-center">
                        <button type="button"
                                class="btn btn-outline-dark btn-sm"
                                data-theme-toggle
                                data-theme-label-dark="@Localizer["Theme.Dark"]"
                                data-theme-label-light="@Localizer["Theme.Light"]"
                                aria-pressed="false">
                            <span data-theme-toggle-label>@Localizer["Theme.Dark"]</span>
                        </button>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle vs-nav-link" href="#" id="langDropdown"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @Localizer["Nav.Language"]
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Language"
                                   asp-action="Set"
                                   asp-route-culture="pl"
                                   asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                                    🇵🇱 Polski
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Language"
                                   asp-action="Set"
                                   asp-route-culture="en"
                                   asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                                    🇬🇧 English
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" id="main-content">
    @RenderBody()
</main>

<footer class="border-top footer">
    <div class="footer-content">
        &copy; 2026 - Tomasz Kraft Solutions
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
