@model Portfolio.Models.ContactPageViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Contact.Title"];
    var mailSubject = Uri.EscapeDataString(Localizer["Contact.MailSubject"].Value);
}

<div class="page-bg">
    <div class="container py-5 container-max-700">

        <div class="vs-panel">

            <h1 class="mb-4">
                @Localizer["Contact.Heading"]
            </h1>

            <p>
                @Localizer["Contact.EmailIntro"]
            </p>

            <div class="d-flex align-items-center gap-3 mb-3">
                <h4 class="fw-bold m-0">@Model.Info.Email</h4>

                <a class="btn btn-outline-dark btn-sm"
                   href="mailto:@Model.Info.Email?subject=@mailSubject">
                    @Localizer["Contact.SendEmail"]
                </a>
            </div>

            <p class="mt-4">
                @Localizer["Contact.PhoneIntro"]
            </p>
            <h4 class="fw-bold">@Model.Info.Phone</h4>

            <p class="mt-4">
                @Localizer["Contact.SocialIntro"]
            </p>
            <ul>
                @foreach (var link in Model.Info.SocialLinks)
                {
                    <li>
                        <a href="@link.Url" target="_blank" rel="noopener noreferrer">@link.Name</a>
                    </li>
                }
            </ul>

            <hr class="my-4" />

            <h2 class="mb-3">
                @Localizer["Contact.DownloadCvHeading"]
            </h2>

            <a class="btn btn-dark mb-4"
               href="~/files/TomaszKraftCV.pdf"
               download="TomaszKraftCV.pdf">
                @Localizer["Contact.DownloadCvButton"]
            </a>

            <hr class="my-4" />

            <h2 class="mb-3">
                @Localizer["Contact.EmailCvHeading"]
            </h2>

            @if (!Model.CvEmailEnabled)
            {
                <div class="alert alert-info">
                    @Localizer["Contact.CvEmailDisabled"]
                </div>
            }
            else
            {
                @if (Model.CvSent)
                {
                    <div class="alert alert-success">
                        @Localizer["Contact.CvSentSuccess"]
                    </div>
                }

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        <div>@Localizer["Contact.ValidationError"]</div>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <form asp-action="Contact" method="post" class="mt-3">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="Request.Email" class="form-label">
                            @Localizer["Contact.EmailLabel"]
                        </label>
                        <input asp-for="Request.Email" class="form-control" />
                        <span asp-validation-for="Request.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-secondary">
                        @Localizer["Contact.EmailCvButton"]
                    </button>
                </form>
            }

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
