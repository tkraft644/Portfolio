@model Portfolio.Models.ProjectsViewModel

@{
    var isEnglish = System.Globalization.CultureInfo.CurrentUICulture
        .TwoLetterISOLanguageName == "en";

    ViewData["Title"] = isEnglish
        ? "Projects & challenges"
        : "Projekty i wyzwania";
}

<div class="page-bg">
    <div class="container py-5" style="max-width: 1000px;">

        <h1 class="mb-4">
            @(isEnglish ? "Projects" : "Projekty")
        </h1>

        <div class="row">
            @foreach (var p in Model.Projects)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title">
                                @(isEnglish ? p.TitleEn : p.TitlePl)
                            </h4>

                            <h6 class="card-subtitle mb-2 text-muted">
                                @p.Company
                            </h6>

                            <p class="card-text mt-3">
                                @(isEnglish ? p.DescriptionEn : p.DescriptionPl)
                            </p>

                            <p class="mt-3 mb-1">
                                <strong>
                                    @(isEnglish ? "Technologies:" : "Technologie:")
                                </strong>
                            </p>

                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tech in p.Technologies)
                                {
                                    <span class="badge bg-secondary">@tech</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <hr class="my-5"/>

        <h2 class="mb-4">
            @(isEnglish ? "Challenges" : "Wyzwania")
        </h2>

        <div class="row">
            @foreach (var c in Model.Challenges)
            {
                <div class="col-md-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                @(isEnglish ? c.TitleEn : c.TitlePl)
                            </h5>

                            <p class="card-text">
                                @(isEnglish ? c.DescriptionEn : c.DescriptionPl)
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>