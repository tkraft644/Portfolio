@model Portfolio.Models.ProjectsViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Projects.Title"];
}

<div class="page-bg">
    <div class="container py-5 container-max-1000">

        <div class="vs-panel mb-4">
            <h1 class="mb-0">
                @Localizer["Projects.Heading"]
            </h1>
        </div>

        <div class="row">
            @foreach (var p in Model.Projects)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title">
                                @p.Title
                            </h4>

                            <h6 class="card-subtitle mb-2 text-muted">
                                @p.Company
                            </h6>

                            <p class="card-text mt-3">
                                @p.Description
                            </p>

                            <p class="mt-3 mb-1">
                                <strong>
                                    @Localizer["Projects.Technologies"]
                                </strong>
                            </p>

                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tech in p.Technologies)
                                {
                                    <span class="badge bg-secondary">@tech</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <hr class="my-5"/>

        <div class="vs-panel mb-4">
            <h2 class="mb-0">
                @Localizer["Projects.Challenges"]
            </h2>
        </div>

        <div class="row">
            @foreach (var c in Model.Challenges)
            {
                <div class="col-md-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                @c.Title
                            </h5>

                            <p class="card-text">
                                @c.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
