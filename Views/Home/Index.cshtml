@model Portfolio.Models.HomeIndexViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Home.Title"];
}

<div class="page-bg page-bg-center" style="background-image: url('@Model.HeroBackgroundUrl');">
    <div class="container py-5 container-max-900">
        <div class="vs-panel text-center">
            <h1 class="display-4 fw-bold mb-2">@Model.Name</h1>

            <p class="lead mb-0">
                @Localizer["Home.RoleExperience", Model.Role, Model.YearsOfExperience]
            </p>

            <p class="mt-4 mb-3">
                @Localizer["Home.DailyTech"]
            </p>

            <div class="d-flex flex-wrap justify-content-center gap-2 mb-4">
                @foreach (var tech in Model.MainTechnologies)
                {
                    if (tech == "Angular (SPA)")
                    {
                        <a class="badge bg-secondary text-decoration-none" href="/app/">@tech</a>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@tech</span>
                    }
                }
            </div>

            <a asp-controller="Home" asp-action="About" class="btn btn-secondary btn-lg">
                @Localizer["Home.AboutMe"]
            </a>
        </div>
    </div>
</div>
