@model Portfolio.Models.AboutViewModel

@{
    var isEnglish = System.Globalization.CultureInfo.CurrentUICulture
        .TwoLetterISOLanguageName == "en";

    ViewData["Title"] = isEnglish
        ? "About me & experience"
        : "O mnie i doświadczenie";
}

<div class="page-bg">
    <div class="container py-5" style="max-width: 900px;">
        <div class="vs-panel">

            <h1 class="mb-4">
                @(isEnglish ? "About me" : "O mnie")
            </h1>

            @if (isEnglish)
            {
                <p>
                    I am a .NET developer with 3 years of experience. I build web and desktop applications
                    using .NET, C#, ASP.NET Core, WPF and Entity Framework Core. I focus on clean code,
                    solid architecture and good engineering practices. In my free time I enjoy photography
                    and off-road automotive.
                </p>
            }
            else
            {
                <p>@Model.Bio</p>
            }

            <h3 class="mt-4">
                @(isEnglish ? "Interests" : "Zainteresowania")
            </h3>
            <ul>
                @foreach (var hobby in Model.Hobbies)
                {
                    <li>@hobby</li>
                }
            </ul>

            <hr class="my-5" />

            <h2 class="mb-4">
                @(isEnglish ? "Experience" : "Doświadczenie")
            </h2>

            @foreach (var exp in Model.Experience)
            {
                <div class="vs-experience-item mb-4 p-3">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-2">
                        <div>
                            <h4 class="mb-1">@exp.Position</h4>
                            <div class="vs-experience-company">@exp.Company</div>
                        </div>
                        <div class="mt-2 mt-md-0">
                            <span class="vs-experience-period">
                                @exp.GetPeriodText()
                            </span>
                        </div>
                    </div>

                    <ul class="mb-0">
                        @foreach (var r in exp.Responsibilities)
                        {
                            <li>@r</li>
                        }
                    </ul>
                </div>
            }

        </div>
    </div>
</div>